{
  "label_priorities": {
    "farbfehler": 0,
    "bruch": 1,
    "rest": 2,
    "normal": 3
  },
  "label_class_map": {
    "normal": "Normal",
    "farbfehler": "Farbfehler",
    "different colour spot": "Farbfehler",
    "similar colour spot": "Farbfehler",
    "burnt": "Farbfehler",
    "bruch": "Bruch",
    "middle breakage": "Bruch",
    "corner or edge breakage": "Bruch",
    "rest": "Rest",
    "small scratches": "Rest",
    "fryum stuck together": "Rest",
    "fragment": "Rest",
    "other": "Rest"
  },
  "defaults": {
    "sort_log_enabled": true,
    "window_size_variance_sensitivity": 1.1
  },
  "label_rules": [
    {
      "label": "farbfehler",
      "conditions": [
        {
          "metric": "color_issue_detected",
          "op": "==",
          "value": true,
          "reason": "Farbabweichung erkannt"
        }
      ]
    },
    {
      "label": "farbfehler",
      "conditions": [
        {
          "metric": "color_dark_delta",
          "op": ">=",
          "value": 24,
          "reason": "Starker Dunkelanteil: {color_dark_delta}"
        },
        {
          "metric": "color_spot_area",
          "op": ">=",
          "value": 100,
          "reason": "Farbfl√§che: {color_spot_area}px"
        }
      ]
    },
    {
      "label": "bruch",
      "conditions": [
        {
          "metric": "geometry_total_hole_count",
          "op": "<=",
          "value": 6,
          "reason": "Weniger als 7 Fenster"
        }
      ]
    },
    {
      "label": "rest",
      "conditions": [
        {
          "metric": "geometry_window_size_variance_score",
          "op": "<",
          "value": 82,
          "reason": "Fenster-Varianz niedrig"
        }
      ]
    },
    {
      "label": "normal",
      "conditions": [],
      "fallback_reason": "Standard"
    }
  ]
}
